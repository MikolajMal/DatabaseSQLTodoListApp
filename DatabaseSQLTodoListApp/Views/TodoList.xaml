<UserControl x:Class="DatabaseSQLTodoListApp.Views.TodoList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DatabaseSQLTodoListApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Style="{StaticResource GridBorderStyle}">
            <!--Another grid to make custom border and opacity for ListView showing problems-->
            <Grid>
                <Grid.OpacityMask>
                    <VisualBrush Visual="{Binding ElementName=border}"/>
                </Grid.OpacityMask>
                <ListView ItemsSource="{Binding Tasks}">
                    <!--<ListView.ItemContainerStyle>
                            </ListView.ItemContainerStyle>-->
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Images/Checkbox.png"/>
                                <TextBlock Style="{StaticResource DarkTextBlokStyle}" Text="{Binding Name}"/>
                                <TextBlock Text="{Binding Category}"/>
                                <TextBlock Text="{Binding Deadline}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</UserControl>
